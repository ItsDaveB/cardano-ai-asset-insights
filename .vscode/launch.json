    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/api-server.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Cron Runner",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/cron-runner.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
    ],
    "compounds": [
        {
            "name": "Debug API and Cron",
            "configurations": [
                "Debug API Server",
                "Debug Cron Runner"
            ]
        }
    ]
}