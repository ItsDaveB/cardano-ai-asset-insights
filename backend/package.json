{
  "name": "ai-trading-insights",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "run:api": "nodemon --watch src --exec \"tsc && node dist/api-server.js\"",
    "debug:api": "nodemon --watch src --exec \"tsc && node --inspect dist/api-server.js\"",
    "run:cron": "nodemon --watch src --exec \"tsc && node dist/cron-runner.js\"",
    "debug:cron": "nodemon --watch src --exec \"tsc && node --inspect dist/cron-runner.js\"",
    "run:both": "concurrently \"npm run debug:api\" \"npm run run:cron\"",
    "build": "tsc",
    "start": "node dist/api-server.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js,json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "google-auth-library": "^9.15.1",
    "joi": "^17.13.3",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.21"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.14",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
